<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    app:cardElevation="10dp"
    android:layout_height="wrap_content">
    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/itemHoaDonTong_layout_linearHoaDon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_hoadon_chuathanhtoan"
        android:orientation="vertical"
        android:paddingStart="10dp"
        android:paddingTop="10dp"
        android:paddingEnd="10dp"
        android:paddingBottom="10dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/itemHoaDonTong_tv_fullName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/background_name"
                android:fontFamily="@font/overpass_extrabold"
                android:gravity="center_horizontal"
                android:text="Nguyễn Gia Minh"
                android:textColor="#16013C"
                android:textSize="18sp"
                android:textStyle="bold"
                app:textAllCaps="true" />
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/order_35"
                android:layout_alignParentEnd="true"
                />
        </RelativeLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/itemHoaDonTong_tv_phoneNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/overpass_bold"
            android:text="Số Điện Thoại :  0123456789"
            android:textColor="#100423"
            android:textSize="15sp"
            app:textAllCaps="true" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:weightSum="10">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/itemHoaDonTong_tv_start"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:fontFamily="@font/overpass_bold"
                android:text="Ngày bắt đầu: 16/09/2003"
                android:textColor="#100423"
                android:textSize="15sp"
                app:textAllCaps="true" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/itemHoaDonTong_tv_hourStart"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:fontFamily="@font/overpass_bold"
                android:text="Thời gian (h): 10"
                android:textColor="#100423"
                android:textSize="15sp"
                app:textAllCaps="true" />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:weightSum="10">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/itemHoaDonTong_tv_end"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:fontFamily="@font/overpass_bold"
                android:text="Ngày kết thúc : 16/09/2003"
                android:textColor="#100423"
                android:textSize="15sp"
                app:textAllCaps="true" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/itemHoaDonTong_tv_hourEnd"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:fontFamily="@font/overpass_bold"
                android:text="Thời gian (h): 10"
                android:textColor="#100423"
                android:textSize="15sp"
                app:textAllCaps="true" />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/itemHoaDonTong_tv_rooms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/overpass_bold"
            android:text="số phòng: 305, 102, 302"
            android:textColor="#100423"
            android:textSize="15sp"
            app:textAllCaps="true" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/overpass_bold"
                android:text="Trạng thái: "
                android:textColor="#100423"
                android:textSize="15sp"
                app:textAllCaps="true" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/itemHoaDonTong_tv_status"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/overpass_bold"
                android:gravity="center"
                android:text="Chưa Thanh Toán"
                android:textColor="#DA0909"
                android:textSize="16sp"
                app:textAllCaps="false" />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/overpass_bold"
                android:text="Tổng Tiền: "
                android:textColor="#100423"
                android:textSize="15sp"
                app:textAllCaps="true" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/itemHoaDonTong_tv_total"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/overpass_bold"
                android:gravity="center"
                android:text="24.000.000 đ"
                android:textColor="#DA0909"
                android:textSize="15.5sp"
                android:textStyle="bold"
                app:textAllCaps="false" />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/itemHoaDonTong_btn_detail"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="40dp"
            android:background="@drawable/btn_2"
            android:fontFamily="@font/overpass_bold"
            android:text="Chỉ Tiết"
            android:textColor="@color/white"
            android:textSize="16.5sp" />
    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.cardview.widget.CardView>