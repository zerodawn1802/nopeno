<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Activiti_User.ThongKeActivity"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/actiThongKe_tb"
        android:background="@color/white"
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="wrap_content"/>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/actiThongKe_linear_thongKe"
        app:layout_constraintTop_toBottomOf="@id/actiThongKe_tb"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/white"
        android:layout_marginTop="10dp"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="10dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/black"
                android:drawablePadding="10dp"
                android:background="@drawable/background_date_thongke"
                android:drawableLeft="@drawable/calender_23"
                android:textSize="15sp"
                android:gravity="center"
                android:id="@+id/actiThongKe_tv_checkIn"
                android:onClick="handleActionTvCheckIn"
                android:fontFamily="@font/overpass_semibold"
                android:text="20/10/2022" />

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/double_next_27"
                app:layout_constraintStart_toStartOf="parent" />
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/black"
                android:background="@drawable/background_date_thongke"
                android:drawableTint="@null"
                android:drawableLeft="@drawable/calender_23"
                android:drawablePadding="10dp"
                android:id="@+id/actiThongKe_tv_checkOut"
                android:textSize="15sp"
                android:gravity="center"
                android:onClick="handleActionTvCheckOut"
                android:fontFamily="@font/overpass_semibold"
                android:text="20/10/2022" />
        </RelativeLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/background_layout_thongke"
                    android:elevation="100dp"
                    >

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_marginTop="5dp"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        android:text="Phòng đã thanh toán"
                        android:textSize="35px"
                        android:textColor="#D9026D9E"
                        android:fontFamily="@font/overpass_bold"
                        android:textStyle="bold"
                        />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        android:text="1300K"
                        android:id="@+id/actiThongKe_tv_roomSuccess"
                        android:textSize="40px"
                        android:textColor="#D9026D9E"
                        android:fontFamily="@font/overpass_bold"
                        android:textStyle="bold"
                        />
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/actiThongKe_tv_roomSuccess"
                        android:text="Phòng bị huỷ"
                        android:textSize="35px"
                        android:textColor="#D9026D9E"
                        android:fontFamily="@font/overpass_bold"
                        android:textStyle="bold"
                        />
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/actiThongKe_tv_roomSuccess"
                        android:layout_height="wrap_content"
                        android:text="600K"
                        android:id="@+id/actiThongKe_tv_roomCancel"
                        android:textSize="40px"
                        android:textColor="#D9026D9E"
                        android:fontFamily="@font/overpass_bold"
                        android:textStyle="bold"
                        />
                    <View
                        android:layout_marginTop="5dp"
                        app:layout_constraintTop_toBottomOf="@id/actiThongKe_tv_roomCancel"
                        android:layout_width="match_parent"
                        android:id="@+id/actiThongKe_view_v1"
                        android:background="#4D000000"
                        android:layout_height="1dp"/>
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_marginTop="5dp"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/actiThongKe_view_v1"
                        android:text="Tiền Phòng"
                        android:textSize="35px"
                        android:textColor="#D9026D9E"
                        android:fontFamily="@font/overpass_bold"
                        android:textStyle="bold"
                        />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/actiThongKe_view_v1"
                        android:text="1300K"
                        android:id="@+id/actiThongKe_tv_roomTotal"
                        android:textSize="40px"
                        android:textColor="#D9026D9E"
                        android:fontFamily="@font/overpass_bold"
                        android:textStyle="bold"
                        />
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/actiThongKe_tv_roomTotal"
                        android:text="Tiền dịch vụ"
                        android:textSize="35px"
                        android:textColor="#D9026D9E"
                        android:fontFamily="@font/overpass_bold"
                        android:textStyle="bold"
                        />
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/actiThongKe_tv_roomTotal"
                        android:layout_height="wrap_content"
                        android:text="600K"
                        android:id="@+id/actiThongKe_tv_serviceTotal"
                        android:textSize="40px"
                        android:textColor="#D9026D9E"
                        android:fontFamily="@font/overpass_bold"
                        android:textStyle="bold"
                        />

                    <View
                        android:layout_marginTop="5dp"
                        app:layout_constraintTop_toBottomOf="@id/actiThongKe_tv_serviceTotal"
                        android:layout_width="match_parent"
                        android:id="@+id/actiThongKe_view_v2"
                        android:background="#4D000000"
                        android:layout_height="1dp"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/actiThongKe_view_v2"
                        android:text="Doanh thu"
                        android:textSize="40px"
                        android:textColor="#D9026D9E"
                        android:fontFamily="@font/overpass_bold"
                        android:textStyle="bold"
                        />
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/actiThongKe_view_v2"
                        android:layout_height="wrap_content"
                        android:text="600K"
                        android:id="@+id/actiThongKe_tv_total"
                        android:textSize="50px"
                        android:textColor="#F2026D9E"
                        android:fontFamily="@font/overpass_extrabold"
                        android:textStyle="bold"
                        />
                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_margin="10dp"
                    android:padding="10dp"
                    android:elevation="100dp"
                    android:background="@drawable/background_layout_thongke"
                    android:layout_height="wrap_content">
                    <androidx.appcompat.widget.LinearLayoutCompat
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_width="match_parent"
                        android:gravity="center_vertical"
                        android:layout_height="wrap_content"
                        android:id="@+id/actiThongKe_linear_status"
                        android:orientation="horizontal">
                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:id="@+id/actiThongKe_img_statusThanhToan"
                            android:background="@drawable/background_status_room_thanhtoan"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            />
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_marginStart="10dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Đã thanh toán"
                            android:textSize="35px"
                            android:textColor="@color/black"
                            />
                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginStart="50dp"
                            android:background="@drawable/background_status_room_huy" />
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_marginStart="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Bị Huỷ"
                            android:textSize="35px"
                            android:textColor="@color/black"
                            />
                    </androidx.appcompat.widget.LinearLayoutCompat>
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/actiThongKe_rc_category"
                        app:layout_constraintTop_toBottomOf="@id/actiThongKe_linear_status"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        />
                </androidx.constraintlayout.widget.ConstraintLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:elevation="100dp"
                    android:background="@drawable/background_layout_thongke"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginStart="10dp">
                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/actiThongKe_rc_service"
                        />
                </RelativeLayout>
            </androidx.appcompat.widget.LinearLayoutCompat>
        </ScrollView>
    </androidx.appcompat.widget.LinearLayoutCompat>
    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/actiThongKe_pg"
        android:visibility="gone"
        />
</androidx.constraintlayout.widget.ConstraintLayout>